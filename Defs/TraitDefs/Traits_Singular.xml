<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <TraitDef>
    <defName>Vegetarian</defName>
    <commonality>3</commonality>
	<forcedPassions>
      <li>Plants</li>
    </forcedPassions>
	<disabledWorkTags>Hunting</disabledWorkTags>
    <degreeDatas>
      <li>
        <label>vegetarian</label>
        <description>{PAWN_nameDef} hates the idea of eating other creatures. {PAWN_pronoun} will if necessary for survival, but {PAWN_pronoun} will be unhappy about it.</description>
		<disallowedMentalStates>
          <li>Slaughterer</li>
		</disallowedMentalStates>
		<skillGains>
          <li>
            <key>Plants</key>
            <value>2</value>
          </li>
        </skillGains>
      </li>
    </degreeDatas>
	<conflictingTraits>
      <li>Cannibal</li>
	  <li>Vegan</li>
    </conflictingTraits>
	<disabledWorkTypes>
      <li>Hunting</li>
    </disabledWorkTypes>
  </TraitDef>


  <TraitDef>
    <defName>Vegan</defName>
    <commonality>1.5</commonality>
	<forcedPassions>
      <li>Plants</li>
    </forcedPassions>
	<disabledWorkTags>
	  <li>Animals</li>
	  <li>Hunting</li>
	  <li>Cooking</li>
	</disabledWorkTags>
    <degreeDatas>
      <li>
        <label>vegan</label>
        <description>{PAWN_nameDef} hates the idea of eating other creatures or their products. {PAWN_pronoun} will if necessary for survival, but {PAWN_pronoun} will be unhappy about it.</description>
		<disallowedMentalStates>
          <li>Slaughterer</li>
		</disallowedMentalStates>
	    <skillGains>
          <li>
            <key>Plants</key>
            <value>6</value>
          </li>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Cannibal</li>
	  <li>Vegetarian</li>
    </conflictingTraits>
	<disabledWorkTypes>
      <li>Hunting</li>
	  <li>Handling</li>
	  <li>Cooking</li>
    </disabledWorkTypes>
  </TraitDef>


</Defs>