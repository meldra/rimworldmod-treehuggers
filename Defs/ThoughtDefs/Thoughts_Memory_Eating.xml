<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>AteUnknownIngredientsTreehugger</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <requiredTraits>
      <li>Vegan</li>
	  <li>Vegetarian</li>
    </requiredTraits>
    <stages>
      <li>
        <label>unidentifiable food</label>
        <description>I don't know what was in in that food. Maybe... meat?</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteMeatTreehugger</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <requiredTraits>
      <li>Vegan</li>
	  <li>Vegetarian</li>
    </requiredTraits>
    <stages>
      <li>
        <label>meat consumption</label>
        <description>I ate the flesh of an animal. The innocent creature should still be alive!</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
     
  <ThoughtDef>
    <defName>AteAnimalProductTreehugger</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <requiredTraits>
      <li>Vegan</li>
    </requiredTraits>
    <stages>
      <li>
        <label>animal product consumption</label>
        <description>I ate a meal made from animal products. We should not exploit animals for our own survival!</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>